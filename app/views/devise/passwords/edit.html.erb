<h2><%= I18n.t "devise.passwords.edit.change_your_password"%></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, I18n.t "devise.passwords.edit.new_password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: I18n.t "devise.passwords.edit.new_password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, I18n.t "devise.passwords.edit.confirm_new_password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: I18n.t "devise.passwords.edit.confirm_new_password" %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t "devise.passwords.edit.change_my_password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
